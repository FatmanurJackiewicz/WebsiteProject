@using AdminPanelMVC.Models.AboutMe;
@model AboutMeViewModel;

<form method="get" id="formAuthentication" class="mb-6" asp-controller="AboutMeAdmin" asp-action="UpdateAboutMe">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-6">
        <label asp-for="Introduction" class="form-label">Introduction</label>
        <input type="text" asp-for="Introduction" class="form-control" id="name" name="Introduction" placeholder="Enter Introduction" disabled />
        <span asp-validation-for="Introduction" class="text-danger"></span>
    </div>

    <div class="mb-6 ">
        <label asp-for="Image1Url" class="form-label">Image 1</label>
        <img src="@Model.Image1Url" alt="Image 1" class="img-fluid" />
    </div>

    <div class="mb-6">
        <label asp-for="Image2Url" class="form-label">Image 2</label>
        <img src="@Model.Image2Url" alt="Image 2" class="img-fluid" />
    </div>

    <div class="mb-6">
        <button class="btn btn-warning me-3 mt-2">Click For Edit</button>
    </div>
</form>
